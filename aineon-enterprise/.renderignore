# Node.js files and directories
node_modules/
node_modules_backup/
package.json*
*.package.json
vite.config.js
tailwind.config.js
*.config.js

# Frontend build artifacts
dist/
build/
.next/
.nuxt/

# Development files
.env.local
.env.development
.env.test

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Git
.git/
.gitignore

# Python cache
__pycache__/
*.pyc
*.pyo
*.pyd

# Logs
logs/
*.log

# Temporary files
tmp/
temp/
*.tmp

# Backup files
*.bak
*.backup
*.old

# Documentation (keep essential deployment docs)
*.md
!RENDER_DEPLOYMENT_GUIDE.md
!README.md

